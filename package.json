{
  "name": "@noderr/active-trading-system",
  "version": "2.0.0",
  "description": "Noderr Active Trading System - Next-generation ML-powered algorithmic trading platform",
  "private": true,
  "workspaces": [
    "cursor_compatible/packages/*"
  ],
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "setup:dev": "pnpm install && pnpm run build && pnpm run setup:git-hooks",
    "setup:git-hooks": "husky install",
    
    "build": "pnpm -r --filter='./cursor_compatible/packages/**' build",
    "build:watch": "pnpm -r --filter='./cursor_compatible/packages/**' --parallel build:watch",
    "clean": "pnpm -r --filter='./cursor_compatible/packages/**' clean && rimraf node_modules",
    
    "lint": "eslint --ext .ts,.tsx cursor_compatible/packages",
    "lint:fix": "eslint --ext .ts,.tsx cursor_compatible/packages --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"cursor_compatible/packages/**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"cursor_compatible/packages/**/*.{ts,tsx,js,json,md}\"",
    
    "test": "jest",
    "test:unit": "jest --testPathPattern=\\.unit\\.test\\.ts$",
    "test:integration": "jest --testPathPattern=\\.integration\\.test\\.ts$",
    "test:e2e": "jest --testPathPattern=\\.e2e\\.test\\.ts$",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    
    "observability:up": "cd infrastructure/observability && docker-compose up -d",
    "observability:down": "cd infrastructure/observability && docker-compose down",
    "observability:logs": "cd infrastructure/observability && docker-compose logs -f",
    
    "docs:dev": "cd docs && mkdocs serve",
    "docs:build": "cd docs && mkdocs build",
    "docs:deploy": "cd docs && mkdocs gh-deploy",
    
    "security:audit": "pnpm audit --audit-level=high",
    "security:scan": "snyk test",
    "quality:check": "pnpm run lint && pnpm run typecheck && pnpm run test:unit && pnpm run security:audit",
    
    "ci": "pnpm run quality:check && pnpm run build && pnpm run test:integration",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.3.3"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Noderrxyz/Old-Trading-Bot.git"
  },
  "keywords": [
    "trading",
    "algorithmic-trading",
    "machine-learning",
    "ai",
    "crypto",
    "mlops",
    "timeseries",
    "prediction",
    "reinforcement-learning"
  ],
  "author": "Noderr Team",
  "license": "MIT"
}
