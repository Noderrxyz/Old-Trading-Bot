{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OperationalData",
  "type": "object",
  "properties": {
    "type": { "type": "string", "enum": ["trade", "order", "position", "pnl"] },
    "id": { "type": "string" },
    "user": { "type": "string" },
    "symbol": { "type": "string" },
    "timestamp": { "type": "integer" },
    "payload": { "type": "object" }
  },
  "required": ["type", "id", "user", "symbol", "timestamp", "payload"],
  "additionalProperties": false
} 