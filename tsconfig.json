{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "paths": {
      "@noderr/*": ["cursor_compatible/packages/*/src"]
    },
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "cursor_compatible/packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./cursor_compatible/packages/types" },
    { "path": "./cursor_compatible/packages/utils" },
    { "path": "./cursor_compatible/packages/config" },
    { "path": "./cursor_compatible/packages/telemetry" },
    { "path": "./cursor_compatible/packages/ml" },
    { "path": "./cursor_compatible/packages/execution" },
    { "path": "./cursor_compatible/packages/strategy" },
    { "path": "./cursor_compatible/packages/core" }
  ]
}
